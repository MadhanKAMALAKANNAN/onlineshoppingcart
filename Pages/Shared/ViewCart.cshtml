@model IEnumerable<OnlineShoppingCart.Models.ViewCart>
             
	<div  id="idheaderCartPHolder"> 
		@{decimal total = 0;}
	
<ul class="header-cart-wrapitem">
@foreach (var eachPrd in Model)
{						
							
								<li class="header-cart-item">
									<div class="header-cart-item-img">
										<img src=@eachPrd.product.ProductPic alt="IMG">	
									</div>

									<div class="header-cart-item-txt">
										<a href="#" class="header-cart-item-name"> 
											 @eachPrd.product.Name 
										</a>
										 @*<span onclick="Remove()" style="color:black;cursor:pointer;position:absolute;float:right;Left:auto;right:initial;top:auto">X</span>*@
										<span class="header-cart-item-info">
											@eachPrd.cartDetails.Qty x $@eachPrd.product.Price
										</span>
									</div>
								</li>	@* $@eachPrd.cartDetails.TotalPrice*@
		var tprice = eachPrd.cartDetails.TotalPrice.HasValue?eachPrd.cartDetails.TotalPrice.Value.ToString("0.00"):"0";
	 	   var nameId = "prdName"+@eachPrd.cartDetails.ProductId ;
			total += decimal.Parse(tprice);
				<input id="@nameId" value="@eachPrd.product.Name"  style="display:none"/>
		}
								 
							</ul>

							<div class="header-cart-total">
								Total: $@total
							</div>

							<div class="header-cart-buttons">
								<div class="header-cart-wrapbtn">
									@if(@Model.Count()>0)
									{
										<!-- Button -->
										<a href="cart?noaddtocart" class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4" >
											View Cart
										</a>
									}
									else
									{
										<a href="#" class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4" style=" background-color:grey;">
											View Cart
										</a>
									}
								</div>

								<div class="header-cart-wrapbtn">
									@if(@Model.Count()>0)
									{
										<!-- Button -->
										<a href="CheckOut" class="flex-c-m size1 bg1 bo-rad-20 hov1 s-text1 trans-0-4">
											Check Out
										</a>
									}
									else
									{
										   <!-- Button -->
										<a href="#" class="flex-c-m size1  bo-rad-20 hov1 s-text1 trans-0-4" style=" background-color:grey;">
											Check Out
										</a>
									}
								</div>
							</div>
			
					   	<input class="header-icons-noticount" value="@Model.Count()"  style="display:none"/>
						
					
					  </div>  

	 